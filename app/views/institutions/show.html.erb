<% if @institution.parent_institution.present? %>
  <h1><%= @institution.parent_institution.title %></h1>
  <h3><%= @institution.title %></h3>
<% else %>
  <h1><%= @institution.title %></h1>
<% end %>

<div class="institution-description"><%= @institution.description %></div>


<%= render 'shared/institutions' %>

<% if orange_signed_in? %>
  <% if @forms.any? %>
    <h4>Moksleivių anketos:</h4>
    <%= render 'shared/forms' %>
  <% else %>
    <h4>Moksleivių anketų nėra.</h4>
  <% end %>
<% end %>